<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="split" type="tSplit" />
  
    <xs:complexType name="tSplit" >
      <xs:sequence>
        <xs:element name="jornada" type="jjornada" minOccurs="0" maxOccurs="11"/>
      </xs:sequence>
      <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>
    
    <xs:complexType name="jjornada">
      <xs:sequence>
        <xs:element name="partido" type="ppartido" minOccurs="0" maxOccurs="6"/>
      </xs:sequence>
      <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>
    
    <xs:complexType name="ppartido">
      <xs:sequence>
          <xs:element name="fecha_partido" type="xs:date" />
        <xs:element name="equipo" type="eequipo" minOccurs="2" maxOccurs="2"/>
      </xs:sequence>
          <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>
    
    <xs:complexType name="eequipo">
      <xs:sequence>
        <xs:element name="nombre" type="xs:string"/>
        <xs:element name="logo" type="xs:string"/>
        <xs:element name="numero_goles" type="xs:integer"/>
        <xs:element name="resultado" type="rresultado"/>
      </xs:sequence>
            <xs:attribute name="id" type="xs:string" use="required"/>
    </xs:complexType>
    
    
    <xs:simpleType name="rresultado">
      <xs:restriction base="xs:string">
        <xs:length value="1"/>
        <xs:pattern value="[vd]"/>
      </xs:restriction>
    </xs:simpleType>
    

</xs:schema>

